<form
  id="newPostForm"
  action="/api/pet-post/"
  method="POST"
  enctype="multipart/form-data"
>
  <h2 style="text-align: center;"><strong>Create A New Post</strong></h2>
  <div class="field">
    <label class="label">Upload your picture!</label>
    <div class="control">
      <input
        id="pet-pic"
        class="input"
        type="file"
        name="image"
        accept="image/png, image/jpeg"
      />
    </div>
  </div>
  <div class="field">
    <label class="label">Title</label>
    <div class="control">
      <input
        id="title"
        name="title"
        class="input"
        type="text"
        placeholder="Title"
      />
    </div>
  </div>
  <div class="field">
    <label class="label">Caption</label>
    <div class="control">
      <input
        id="caption"
        name="caption"
        class="input"
        type="text"
        placeholder="Caption"
      />
    </div>
  </div>
  <div class="control">
    <button action="submit" class="button is-link">Submit</button>
  </div>
</form>