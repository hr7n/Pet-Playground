<form id="newPostForm">
    <h2 style="text-align: center;"><strong>Create A New Post</strong></h2>
<div class="field">
  <label class="label">Upload your picture!</label>
  <div class="control">
    <input id="pet-pic" class="input" type="file"  accept="image/png, image/jpeg">
  </div>
</div>
<div class="field">
  <label class="label">Title</label>
  <div class="control">
    <input id="title" class="input" type="text" placeholder="Title">
  </div>
</div>
<div class="field">
  <label class="label">Caption</label>
  <div class="control">
      <input id="caption" class="input" type="text" placeholder="Caption">
  </div>
</div>
 <div class="control">
    <button action="submit"  class="button is-link">Submit</button>
  </div>
</form>
  <script src="/js/createPost.js"></script>