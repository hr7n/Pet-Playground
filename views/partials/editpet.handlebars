<h2>Update your pet's information!</h2>
<form id="pet-update" data-petId={{currentPet.id}}>

<div class="field">
  <label class="label">Username: </label>
  <div class="control has-icons-left has-icons-right">
    <input id="updateusername" class="input is-success" type="text" value="{{currentPet.username}}">
    <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
  </div>
  <p class="help is-success">This username is available</p>
</div>


<div class="field is-grouped">
    <label class="label">Favorite Food: </label>
  <div class="control">
    <input id="updatefavorite-food" class="input" type="text" value="{{currentPet.favorite_food}}">
  </div>
 <label class="label">Favorite Toy: </label>
  <div class="control">
    <input id="updatefavorite-toy" class="input" type="text" value="{{currentPet.favorite_toy}}">
  </div>
</div>
<div class="field">
  <label class="label">Add a bio for your pet!</label>
  <div class="control">
    <input id="updatebio" class="input" value="{{currentPet.bio}}"></input>
  </div>
</div>
  <div class="control">
    <button action="submit" id="updatebtn"  class="button is-link">Submit</button>
  </div>
</form>