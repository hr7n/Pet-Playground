<div class="container mx-auto" style="max-width: 500px;">
  <div class="card my-4 bg-light shadow-lg">
    <!-- image for post -->
    <img src="{{picture}}" class="card-img-top" alt="Post image" style="width: 100%; height: auto; aspect-ratio: 1 / 1; object-fit: cover;">

    <div class="card-body">
      <!-- name and username // post like button -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center">
          <img src="{{pet.pet_pic}}" class="mr-3 rounded-circle" alt="Profile picture" style="width: 64px; height: 64px; object-fit: cover;">
          <div>
            <h5 class="mb-0">{{pet.name}}</h5>
            <p class="mb-0">@{{pet.username}}</p>
          </div>
        </div>
      <button class="btn btn-outline-primary like-button" id="likeButton{{id}}" data-id="{{id}}" data-likes="{{likes}}" data-liked="false">
        <i class="far fa-heart"></i> <span class="like-count">{{likes}}</span>
      </button>
      </div>

      <!-- post -->
      <div>
        <p class="card-text">{{caption}}</p>
      </div>

      <!-- add a comment -->
      <div class="input-group mt-4">
        <input class="form-control" id="commentInput{{id}}" type="text" placeholder="Add your comment">
        <div class="input-group-append">
<button class="btn btn-dark commentButton mx-1" id="comment-btn{{id}}" data-id="{{id}}">
  <i class="fas fa-paper-plane"></i>
</button>
        </div>
      </div>
    </div>

    <!-- comment section -->
    <ul class="list-group list-group-flush" id="commentList{{id}}">
      {{#each comments as |comment|}}
      <li class="list-group-item bg-light">
        <strong>{{comment.pet.username}}:</strong> {{comment.comment}}
      </li>
      {{/each}}
    </ul>
  </div>
</div>