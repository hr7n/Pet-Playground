
 <div class="columns">


<div class="column is-one-fifth">

  <aside class="menu">
    <p class="menu-label">
      Current Pets
    </p>
    <ul class="menu-list">
        {{#each pets as |pet|}}
    <li><a href="/profile/{{username}}">{{name}}</a></li>
    {{/each}}
    </ul>
    <p class="menu-label">
     <a  href="/createpet" id="newPetLink"> Add new pet</a>
    </p>
    <button onclick="showNewPost()" style="none" id="showNewPostButton" class="menu-label">New Post</button>
    
  </aside>

</div>

<div class="column">
<div class="card" id="profileHeader" >
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="{{pet_pic}}" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4">{{currentPet.name}} , {{calculateBday currentPet.birthday}}</p>
        <p class="subtitle is-6">@{{currentPet.username}}</p>
      </div>
    </div>
    <div class="content">
    <p>{{currentPet.bio}} </p>

    <p>Favorite Food: {{currentPet.favorite_food}} </p>
    <p>Favorite Toy: {{currentPet.favorite_toy}}</p>
    </div>
  </div>
 
  
</div>
<div id="newPostEl" style="display:none">{{>newpost}}</div>
 <section class="flex-row justify-center">
    {{#each posts as |post|}}
    <div class="row align-center mb-5">
  <div class="col-md-6">
    <div class="card">
      <div class="columns">
        <div class="column card-image-column">
          <div class="card-image">
            <figure class="image post-img">
              <img
                src="{{picture}}"
                alt="Post image"
              />
            </figure>
          </div>
        </div>
        <div class="column card-text-column">
          <div class="card-content is-align-items-flex-start post-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-16x16x">
                  <img
                    class="is-rounded"
                    src={{pet_pic}}
                    alt="Placeholder image"
                  />
                </figure>
              </div>
              <div class="media-content">
                 <div class="control">
    <button id="delete-button" class="button delete-buttons delete is-link is-danger" style="float:right" data-id={{id}}>Delete</button>
  </div>
                <p class="title is-4">{{../currentPet.name}}</p>
                <p class="subtitle is-6">@{{../currentPet.username}}</p>
                <h2><strong>{{title}}</strong></h2>
                <br />
                <h3>{{caption}}</h3>
                <br />
                <div class="field is-grouped">
  <div class="control">
    <button class="button edit is-light edit-button" data-buttonId={{id}}>Edit</button>
  </div>
 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="editPost{{id}}" style="display:none">{{>editpost}}</div>
    {{/each}}
  </section>
  <script src="/js/deletePost.js"></script>
  <script src="/js/editPost.js"></script>
  <script src="/js/hideCreate.js"></script>
  <script src="/js/hideEdit.js"></script>