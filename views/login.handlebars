<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4">
        <h2 class="text-center mb-4">Login to PetPlayground</h2>
        <form id="form-submit">
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
              <input type="email" class="form-control" placeholder="Email" id="email-login" aria-label="Email" aria-describedby="basic-addon1">
            </div>
          </div>
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text" id="basic-addon2"><i class="fas fa-lock"></i></span>
              <input type="password" class="form-control" placeholder="Password" id="password-login" aria-label="Password" aria-describedby="basic-addon2">
            </div>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card p-4">
        <h2 class="text-center mb-4">Signup To PetPlayground</h2>
        <form id="form-signup">
          <div class="mb-3">
            <input type="text" class="form-control" placeholder="Username" id="username-signup">
          </div>
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text" id="basic-addon3"><i class="fas fa-envelope"></i></span>
              <input type="email" class="form-control" placeholder="Email" id="email-signup" aria-label="Email" aria-describedby="basic-addon3">
            </div>
          </div>
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-text" id="basic-addon4"><i class="fas fa-lock"></i></span>
              <input type="password" class="form-control" placeholder="Password" id="password-signup" aria-label="Password" aria-describedby="basic-addon4">
            </div>
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-success">Signup</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>

